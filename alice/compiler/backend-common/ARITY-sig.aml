import structure Label from "../../lib/rtt/Label"

signature ARITY =
    sig
	datatype t =
	    Unary
	  | Tuple of int
	    (* must be >= 0 *)
	  | Product of Label.t vector
	    (* sorted, all labels distinct, no tuple *)
    end
